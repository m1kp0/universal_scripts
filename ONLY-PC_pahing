--to script
local plr = game.Players.LocalPlayer
local uis = game:GetService'UserInputService'

--lib
local Library = loadstring(Game:HttpGet'https://raw.githubusercontent.com/bloodball/-back-ups-for-libs/main/wizard')()

--size
local size1 = 10
local size2 = 0.1
local size3 = 5

--tabs
local pathing = Library:NewWindow'path'
local main = pathing:NewSection'main'
local set = pathing:NewSection'settings'

--path toggle
main:CreateToggle('path', function(value)
    if value then
        local pathTool = Instance.new('Tool', plr.Backpack)
        pathTool.Name = 'path'

        uis.InputBegan:Connect(function(input)
            if input.UserInputType == Enum.UserInputType.MouseButton1 and pathTool.Parent == plr.Character then
                local path = Instance.new'Part'
                path.Parent = workspace
                path.Size = Vector3.new(size1, size2, size3)
                path.Name = 'pathPart'
                path.CFrame = CFrame.new(plr.Character.HumanoidRootPart.Position + Vector3.new(0, -3, 0))
                path.Rotation = Vector3.new(workspace.Camera.CFrame.LookVector)
                path.Material = Enum.Material.SmoothPlastic
                path.Transparency = 0.2
                path.Anchored = true
                path.Color = Color3.fromRGB(255, 255, 255)
            end
        end)  
    else
        for i, v in pairs(workspace:GetDescendants()) do
            if v.Name == 'pathPart' then
                v:Destroy()
            end
            if v.Name == 'pathTool' then
                v:Destroy()
            end
        end
        for i, v in pairs(plr:GetDescendants()) do
            if v.Name == 'Backpack' then
                for i, t in pairs(v:GetDescendants()) do
                    t:Destroy()
                end
            end
        end
        for i, v in pairs(plr:GetDescendants()) do
            if v.Name == 'Character' then
                for i, q in pairs(v:GetDescendants()) do
                    if q:IsA'Tool' and q.Name == 'path' then
                        q:Destroy()
                    end
                end
            end
        end
    end
end)

set:CreateSlider('size X', 0, 100, 10, false, function(value)
    size1 = value
end)

set:CreateSlider('size Z', 0, 100, 5, false, function(value)
    size3 = value
end)
